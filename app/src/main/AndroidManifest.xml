<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jordans.failsafe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FailSafe"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".LoginScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NewUserActivity"
            android:label="Create New User"/>
        <activity android:name=".MainScreenActivity"/>
        <activity android:name=".AddClassActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".WhatIfActivity"
            android:windowSoftInputMode="adjustPan"/><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>

            android:label="Create New User"/>
        <activity android:name=".MainScreenActivity"/>
        <activity
            android:name=".AddClassActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".AddGradeActivity"
            android:windowSoftInputMode="adjustPan"/>
        <!--
